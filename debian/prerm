#!/bin/bash
set -e

case "$1" in
    remove|upgrade|deconfigure)
        if systemctl is-active --quiet proxtop 2>/dev/null; then
            systemctl stop proxtop || true
        fi
        if systemctl is-active --quiet proxprofiler 2>/dev/null; then
            systemctl stop proxprofiler || true
        fi
        ;;
esac

#DEBHELPER#

exit 0

